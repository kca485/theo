---
style: story-gallery
---
{% extends "base.njk" %}
{% block layout %}
  <h2>{{title}}</h2>
  <ol>
  {% for story in collections[stories] | reverse %}
    <li>
      <a class="story" href="{{ story.url }}">
        <div>
          <p class="story-title">{{ story.data.title }}</p>
          <time datetime="{{ story.date.toISOString() }}">
            {{ story.date.toLocaleDateString('id-ID', { dateStyle: 'full', timeZone: 'Asia/Jakarta' }) }}
          </time>
        </div>
      </a>
    </li>
  {% endfor %}
  </ol>
  {{ content | safe }}
{% endblock %}
